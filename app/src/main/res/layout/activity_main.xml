<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

<RelativeLayout
    android:layout_width="match_parent"
    android:background="#60AFFF"
    android:id="@+id/r1"
    android:layout_height="@dimen/_50sdp">

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_margin="@dimen/_10sdp"
android:text="  Credits: 1000"
    android:paddingRight="@dimen/_5sdp"
 android:paddingLeft="@dimen/_5sdp"
    android:textColor="#ffffff"
    android:background="@drawable/roundbutton"
    android:drawableLeft="@drawable/user"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_10sdp"
        android:text="  266/266"
        android:paddingRight="@dimen/_5sdp"
        android:paddingLeft="@dimen/_5sdp"
        android:textColor="#ffffff"
        android:background="@drawable/roundbutton"
        android:drawableLeft="@drawable/spinner"
        />

</RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/r1"
    android:id="@+id/r2"
    android:background="#487392"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_height="wrap_content">


    <rubikstudio.library.LuckyWheelView
        android:layout_centerInParent="true"
        app:lkwBackgroundColor="#FFFFFF"
        app:lkwTextColor="#FFFFFF"
        app:lkwCenterImage="@drawable/wheel2"
        app:lkwCursor="@drawable/ic_cursor"
        android:id="@+id/luckyWheel"
        android:layout_width="300dp"
        android:layout_height="300dp" />
</RelativeLayout>
    <ScrollView
        android:layout_below="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/_4sdp"
            android:scaleType="fitXY"
            android:background="@null"
            android:id="@+id/i1"
            android:src="@drawable/rewaa"/>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/i1"
        android:textColor="#000"
        android:textSize="@dimen/_13sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_13sdp"
        android:text="Daily Check-in"/>


        <Button
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Get Reward"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentRight="true"
          android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:background="@drawable/roundbutton1"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:id="@+id/i2"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="@dimen/_4sdp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/credit1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/i2"
            android:textColor="#000"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:text="Select for Credits"/>

        <Button
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Go"
            android:id="@+id/go"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:background="@drawable/roundbutton1"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:id="@+id/i3"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/_4sdp"
            android:src="@drawable/theme"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/i3"
            android:textColor="#000"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:text="Theme"/>

        <Button
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="+50/each"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:background="@drawable/roundbutton1"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/_4sdp"
            android:id="@+id/i4"
            android:src="@drawable/creditgame"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/i4"
            android:textColor="#000"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:text="Credit Game"/>
        <Button
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Start"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:background="@drawable/roundbutton1"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:id="@+id/i5"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/_4sdp"
            android:src="@drawable/shutdown"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/i5"
            android:textColor="#000"
            android:textSize="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:text="Log Out"/>

        <Button
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Log Out"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:background="@drawable/roundbutton1"/>


    </RelativeLayout>


</LinearLayout>
    </ScrollView>
</RelativeLayout>
